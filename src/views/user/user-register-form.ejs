<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', { title: 'Registro' }) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row justify-content-center">
			<div class="col-12">
				<h2 class="products-title">Registro</h2>
			</div>
			<div class="col-6">
				<form action="/user/register" method="POST" enctype="multipart/form-data">
					
					<div class="row product-detail">
						<div class="col-12">
							<label for="email" class="form-label">Email: *</label>
							<input type="text" id="email" name="email" placeholder="Ej: example@example.com" class="form-input" value="<%if (typeof errors!='undefined') {%><%= userEmail %><% } %>">
							<p><%= typeof errors == 'undefined' ? '' : typeof errors.email == 'undefined' ? '' : errors.email.msg %></p>
						</div>
						<div class="col-12 row">
							<label for="image" class="form-label col-12">Avatar:</label>
							<input type="file" id="image" name="avatar" class="form-file col-12">
							<p><%= typeof errors == 'undefined' ? '' : typeof errors.avatar == 'undefined' ? '' : errors.avatar.msg %></p>
						</div>
						<div class="col-12">
							<label for="password" class="form-label">Contraseña: *</label>
							<input type="password" id="password" name="password" class="form-input">
							<p><%= typeof errors == 'undefined' ? '' : typeof errors.password == 'undefined' ? '' : errors.password.msg %></p>
						</div>
						<div class="col-12">
							<label for="retype" class="form-label">Repite la contraseña: *</label>
							<input type="password" id="retype" name="retype" class="form-input">
							<p><%= typeof errors == 'undefined' ? '' : typeof errors.retype == 'undefined' ? '' : errors.retype.msg %></p>
						</div>
						<div class="mt-5 col-12">
							<button type="submit" class="buy-now-button">Registrarse</button>
						</div>
						<div class="mt-3 col-12">
							<p>(*) Campos obligatorios.</p>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>